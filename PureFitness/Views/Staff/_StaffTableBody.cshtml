@model List<PureFitness.Models.Staff>

@if (Model != null && Model.Any())
{
    @foreach (var staff in Model)
    {
        <tr class="staff-row border-bottom align-middle" data-bs-name="@staff.Name.ToLower()">
            <td>
                <div class="d-flex align-items-center">
                    <i class="bi bi-person-circle text-secondary fs-4 me-3"></i>
                    <div>
                        <div class="fw-semibold">@staff.Name</div>
                    </div>
                </div>
            </td>

            <td>@staff.User?.Email</td>

            <td>
                @if (string.IsNullOrWhiteSpace(staff.PhoneNumber))
                {
                    <span class="text-muted fst-italic">N/A</span>
                }
                else
                {
                    @staff.PhoneNumber
                }
            </td>

            <td>
                @if (string.IsNullOrWhiteSpace(staff.AssignedTask))
                {
                    <span class="text-muted fst-italic">No task assigned</span>
                }
                else
                {
                    @staff.AssignedTask
                }
            </td>

            <td class="text-center">
                <div class="btn-group" role="group">
                    <!-- Assign Task -->
                    <button type="button" class="btn btn-outline-success btn-sm rounded-circle"
                            data-bs-toggle="modal"
                            data-bs-target="#assignTaskModal"
                            data-staff-id="@staff.StaffId"
                            data-staff-name="@staff.Name"
                            title="Assign Task">
                        <i class="bi bi-list-check"></i>
                    </button>

                    <!-- ✏️ Edit -->
                    <a asp-controller="Staff" asp-action="Edit" asp-route-id="@staff.StaffId"
                       class="btn btn-outline-primary btn-sm rounded-circle" title="Edit Staff">
                        <i class="bi bi-pencil"></i>
                    </a>

                    <!-- 🗑️ Delete -->
                    <form asp-controller="Staff" asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@staff.StaffId" />
                        @Html.AntiForgeryToken()
                        <button type="submit"
                                class="btn btn-outline-danger btn-sm rounded-circle"
                                title="Delete Staff"
                                onclick="return confirm('Are you sure you want to delete this staff member?');">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </div>
            </td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="5" class="text-center text-muted py-4">
            <i class="bi bi-info-circle me-2"></i> No staff members found.
        </td>
    </tr>
}
