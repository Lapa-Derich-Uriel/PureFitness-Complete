@using PureFitness.ViewModels
@model StaffViewModel

@{
    ViewData["Title"] = "Edit Staff Member";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <style>
        body {
            background-color: #F0F2F5;
        }

        .card {
            border-radius: 12px;
        }

        .form-control {
            margin-bottom: 16px;
            padding: 10px 14px;
            border-radius: 6px;
        }

            .form-control:focus {
                box-shadow: 0 0 0 0.2rem rgba(13,110,253,0.25);
            }

        .password-wrapper {
            position: relative;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .password-toggle {
            background: transparent;
            border: none;
            font-size: 1.05rem;
            color: #495057;
            cursor: pointer;
        }
    </style>
}

<div class="d-flex justify-content-center align-items-center mt-4 mb-5">
    <div class="card shadow-lg border-0 w-100" style="max-width: 650px;">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-3 px-4">
            <h5 class="mb-0 fw-semibold"><i class="bi bi-pencil-square me-2"></i>Edit Staff Member</h5>
            <a href="@Url.Action("StaffList", "Staff")" class="btn btn-light btn-sm fw-semibold">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>

        <div class="card-body p-4">
            <form asp-action="EditStaffMember" method="post" novalidate>
                <input type="hidden" name="staff.StaffId" value="@Model.staff?.StaffId" />

                <!-- Full Name -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Full Name</label>
                    <input type="text" class="form-control" name="staff.Name" value="@Model.staff?.Name" required />
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Email</label>
                    <input type="email" class="form-control" name="user.Email" value="@Model.user?.Email" required />
                </div>

                <!-- Username -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Username</label>
                    <input type="text" class="form-control" name="user.Username" value="@Model.user?.Username" required />
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Password</label>
                    <div class="password-wrapper position-relative d-flex align-items-center">
                        <input type="password"
                               id="passwordInput"
                               class="form-control me-2"
                               name="user.Password"
                               autocomplete="new-password"
                               readonly
                               required />

                        <button type="button"
                                class="password-toggle btn btn-outline-secondary me-2"
                                id="togglePassword"
                                aria-label="Show password">
                            <i class="bi bi-eye" id="eyeIcon"></i>
                        </button>

                        <button type="button"
                                class="btn btn-sm btn-outline-secondary"
                                id="editPasswordBtn">
                            Edit
                        </button>
                    </div>

                    <small class="text-muted d-block mt-1">
                        Click the eye icon to show/hide the password or "Edit" to set a new password. <br />
                        ⚠️ <strong>Note:</strong> This password is only visible once for security purposes.
                    </small>
                </div>

                <!-- Phone Number -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Phone Number</label>
                    <input type="text" class="form-control"
                           name="staff.PhoneNumber"
                           value="@Model.staff?.PhoneNumber"
                           pattern="[0-9]{11}$"
                           maxlength="11"
                           placeholder="Enter 11-digit phone number"
                           required />
                </div>

                <!-- Assigned Task -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Assigned Task</label>
                    <textarea class="form-control"
                              name="staff.AssignedTask"
                              rows="3"
                              placeholder="Enter task or responsibility for this staff (optional)">@Model.staff?.AssignedTask</textarea>
                </div>

                <!-- Action Buttons -->
                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a href="@Url.Action("StaffList", "Staff")" class="btn btn-outline-secondary px-4 fw-semibold">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                    <button type="submit" class="btn btn-primary px-4 fw-semibold"
                            onclick="return confirm('Save changes to this staff member?');">
                        <i class="bi bi-check2-circle"></i> Save
                    </button>
                </div>
            </form>

            <!-- Reset Password -->
            <div class="mt-4">
                <form asp-action="ResetPassword" method="post">
                    <input type="hidden" name="id" value="@Model.staff?.StaffId" />
                    <button type="submit" class="btn btn-warning w-100 fw-semibold py-2"
                            onclick="return confirm('Reset this staff member\'s password?');">
                        <i class="bi bi-key"></i> Reset Password
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        (function () {
            const pw = document.getElementById('passwordInput');
            const toggle = document.getElementById('togglePassword');
            const eyeIcon = document.getElementById('eyeIcon');
            const editBtn = document.getElementById('editPasswordBtn');

            // Toggle show/hide password
            if (toggle && pw) {
                toggle.addEventListener('click', function () {
                    if (pw.type === 'password') {
                        pw.type = 'text';
                        eyeIcon.classList.replace('bi-eye', 'bi-eye-slash');
                    } else {
                        pw.type = 'password';
                        eyeIcon.classList.replace('bi-eye-slash', 'bi-eye');
                    }
                });
            }

            // Make password editable and clear it
            if (editBtn && pw) {
                editBtn.addEventListener('click', function () {
                    pw.removeAttribute('readonly');   // make editable
                    pw.value = '';                    // clear current value
                    pw.focus();                       // focus for input
                });
            }
        })();
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const passwordInput = document.getElementById('passwordInput');
            const togglePassword = document.getElementById('togglePassword');
            const editPasswordBtn = document.getElementById('editPasswordBtn');
            const eyeIcon = document.getElementById('eyeIcon');
            const storageKey = "passwordViewed_EditStaff";

            // One-time password visibility logic
            const passwordViewed = localStorage.getItem(storageKey);

            if (!passwordViewed) {
                passwordInput.value = "@Model.PlainPasswordForDisplay";
                localStorage.setItem(storageKey, "true");
            } else {
                passwordInput.value = "*********";
            }

            // 👁️ Toggle show/hide password
            togglePassword.addEventListener('click', function () {
                if (passwordInput.type === "password") {
                    passwordInput.type = "text";
                    if (passwordInput.value === "*********") {
                        passwordInput.value = "@Model.PlainPasswordForDisplay";
                    }
                    eyeIcon.classList.replace("bi-eye", "bi-eye-slash");
                } else {
                    passwordInput.type = "password";
                    passwordInput.value = "*********";
                    eyeIcon.classList.replace("bi-eye-slash", "bi-eye");
                }
            });

            // ✏️ Enable editing password
            editPasswordBtn.addEventListener('click', function () {
                passwordInput.removeAttribute("readonly");
                passwordInput.type = "text";
                passwordInput.value = "";
                passwordInput.focus();

                // Optional: reset the viewed flag when editing
                localStorage.removeItem(storageKey);

                // Update UI state
                eyeIcon.classList.replace("bi-eye-slash", "bi-eye");
            });
        });
    </script>
}
