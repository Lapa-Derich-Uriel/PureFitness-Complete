@model PureFitness.Models.Staff

<div class="modal fade" id="resetPasswordModal" tabindex="-1" aria-labelledby="resetPasswordLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-3 overflow-hidden">

            <!-- Header -->
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title fw-semibold" id="resetPasswordLabel">
                    <i class="bi bi-key-fill me-2"></i> Reset Password
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Body -->
            <div class="modal-body px-4 py-3">
                <p class="mb-2">
                    You are about to reset the password for:
                </p>
                <div class="alert alert-light border-start border-warning border-3 py-2">
                    <strong>@Model.Name</strong>
                </div>
                <p class="text-muted mb-0">
                    A new secure password will be generated and shown <strong>only once</strong>.
                    Make sure to copy it before closing the dialog.
                </p>
            </div>

            <!-- Footer -->
            <div class="modal-footer border-0 bg-light px-4 py-3">
                <form asp-action="ResetPassword" method="post" class="w-100 d-flex justify-content-end gap-2">
                    <input type="hidden" name="id" value="@Model.StaffId" />
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-outline-secondary fw-semibold px-4" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle"></i> Cancel
                    </button>
                    <button type="submit" class="btn btn-warning fw-semibold px-4" onclick="return confirm('Reset password for @Model.Name?');">
                        <i class="bi bi-check2-circle"></i> Confirm Reset
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
