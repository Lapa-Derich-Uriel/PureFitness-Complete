@using PureFitness.ViewModels
@model StaffViewModel

@{
    ViewData["Title"] = "Edit Admin Member";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <style>
        body {
            background-color: #F0F2F5;
        }

        .card {
            border-radius: 12px;
        }

        .form-control {
            margin-bottom: 16px;
            padding: 10px 14px;
            border-radius: 6px;
        }

            .form-control:focus {
                box-shadow: 0 0 0 0.2rem rgba(13,110,253,0.25);
            }

        .btn i {
            vertical-align: middle;
        }

        .alert-success {
            border-left: 5px solid #198754;
        }

        .password-wrapper {
            position: relative;
        }

        .password-toggle {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            background: transparent;
            border: none;
            font-size: 1.05rem;
            color: #495057;
            cursor: pointer;
        }
    </style>
}

<div class="d-flex justify-content-center align-items-center mt-4 mb-5">
    <div class="card shadow-lg border-0 w-100" style="max-width: 650px;">
        <!-- Header -->
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-3 px-4">
            <h5 class="mb-0 fw-semibold"><i class="bi bi-pencil-square me-2"></i>Edit Admin Member</h5>
            <a href="@Url.Action("AdminList", "Admin")" class="btn btn-light btn-sm fw-semibold">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>

        <!-- Body -->
        <div class="card-body p-4">
            <form asp-action="EditAdminMember" method="post" novalidate>
                <input type="hidden" name="staff.StaffId" value="@Model.staff?.StaffId" />

                <!-- Full Name -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Full Name</label>
                    <input type="text" class="form-control" name="staff.Name" value="@Model.staff?.Name" required />
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Email</label>
                    <input type="email" class="form-control" name="user.Email" value="@Model.user?.Email" required />
                </div>

                <!-- ✅ Username (now editable, autofill removed) -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Username</label>
                    <input type="text" class="form-control" name="user.Username" value="@Model.user?.Username" required />
                </div>

                <!-- Password with show/hide toggle -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Password</label>
                    <div class="password-wrapper position-relative">
                        <input type="password" id="passwordInput" class="form-control"
                               name="user.Password"
                               autocomplete="new-password" required />
                        <button type="button" class="password-toggle btn btn-outline-secondary position-absolute top-50 end-0 translate-middle-y me-2"
                                id="togglePassword" aria-label="Show password">
                            <i class="bi bi-eye" id="eyeIcon"></i>
                        </button>
                    </div>

                    <small class="text-muted d-block mt-1">
                        Click the eye icon to show/hide the password. <br />
                        ⚠️ <strong>Note:</strong> This password is temporary and can only be viewed once for security purposes.
                    </small>
                </div>

                <!-- Phone Number -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Phone Number</label>
                    <input type="text" class="form-control"
                           name="staff.PhoneNumber"
                           value="@Model.staff?.PhoneNumber"
                           pattern="[0-9]{11}$"
                           maxlength="11"
                           placeholder="Enter 11-digit phone number"
                           required />
                </div>

                <!-- Display new password message if applicable -->
                @if (ViewBag.NewPassword != null)
                {
                    <div class="alert alert-success mt-3">
                        <strong>New Password:</strong> @ViewBag.NewPassword<br />
                        <small class="text-muted">(Please copy this password — it will not be shown again.)</small>
                    </div>
                }

                <!-- Buttons -->
                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a href="@Url.Action("AdminList", "Admin")" class="btn btn-outline-secondary px-4 fw-semibold">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                    <button type="submit" class="btn btn-primary px-4 fw-semibold" onclick="return confirm('Save changes to this Admin member?');">
                        <i class="bi bi-check2-circle"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        // ✅ Only keep password toggle logic
        (function () {
            const pw = document.getElementById('passwordInput');
            const toggle = document.getElementById('togglePassword');
            const eyeIcon = document.getElementById('eyeIcon');

            if (toggle && pw) {
                toggle.addEventListener('click', function () {
                    if (pw.type === 'password') {
                        pw.type = 'text';
                        eyeIcon.classList.remove('bi-eye');
                        eyeIcon.classList.add('bi-eye-slash');
                    } else {
                        pw.type = 'password';
                        eyeIcon.classList.remove('bi-eye-slash');
                        eyeIcon.classList.add('bi-eye');
                    }
                });
            }
        })();
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const passwordInput = document.getElementById('passwordInput');
            const togglePassword = document.getElementById('togglePassword');
            const eyeIcon = document.getElementById('eyeIcon');
            const storageKey = "passwordViewed";

            // Check if password has already been viewed
            const passwordViewed = localStorage.getItem(storageKey);

            if (!passwordViewed) {
                // Show actual password first time
                passwordInput.value = "@Model.PlainPasswordForDisplay";
                localStorage.setItem(storageKey, "true");
            } else {
                // After first view, mask it
                passwordInput.value = "*********";
            }

            // Toggle password visibility
            togglePassword.addEventListener('click', function () {
                if (passwordInput.type === "password") {
                    passwordInput.type = "text";
                    if (passwordInput.value === "*********") {
                        passwordInput.value = "@Model.PlainPasswordForDisplay";
                    }
                    eyeIcon.classList.replace("bi-eye", "bi-eye-slash");
                } else {
                    passwordInput.type = "password";
                    passwordInput.value = "*********";
                    eyeIcon.classList.replace("bi-eye-slash", "bi-eye");
                }
            });
        });
    </script>
}
