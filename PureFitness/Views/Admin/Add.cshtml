@using PureFitness.ViewModels
@model StaffViewModel

@{
    ViewData["Title"] = "Add New Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <style>
        body {
            background-color: #F0F2F5;
        }

        .card {
            border-radius: 12px;
        }

        .form-control {
            margin-bottom: 16px;
            padding: 10px 14px;
            border-radius: 6px;
        }

            .form-control:focus {
                box-shadow: 0 0 0 0.2rem rgba(13,110,253,0.25);
            }

        .btn i {
            vertical-align: middle;
        }
    </style>
}

<div class="d-flex justify-content-center align-items-center mt-4 mb-5">
    <div class="card shadow-lg border-0 w-100" style="max-width: 650px;">
        <!-- Header -->
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-3 px-4">
            <h5 class="mb-0 fw-semibold"><i class="bi bi-person-plus-fill me-2"></i>Add New Staff</h5>
            <a href="@Url.Action("StaffList", "Staff")" class="btn btn-light btn-sm fw-semibold">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>

        <!-- Body -->
        <div class="card-body p-4">
            <form asp-action="AddAdmin" method="post" novalidate>
                <div class="mb-3">
                    <label class="form-label fw-semibold">Full Name</label>
                    <input type="text" class="form-control" name="staff.Name" value="@Model?.staff?.Name" placeholder="Enter full name" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Email Address</label>
                    <input type="email" id="email" class="form-control" name="user.Email" value="@Model?.user?.Email" placeholder="Enter email address" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Username</label>
                    <input type="text" id="username" class="form-control" name="user.Username" value="@Model?.user?.Username" placeholder="Username will be generated automatically" readonly />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Phone Number</label>
                    <input type="text"
                           class="form-control"
                           name="staff.PhoneNumber"
                           value="@Model?.staff?.PhoneNumber"
                           placeholder="Enter phone number"
                           maxlength="11"
                           pattern="\d{11}"
                           title="Phone number must be exactly 11 digits"
                           required
                           oninput="this.value = this.value.replace(/[^0-9]/g, '').slice(0, 11);" />
                </div>


                <div class="alert alert-info mt-3">
                    <i class="bi bi-info-circle"></i>
                    <strong>Note:</strong> A temporary password will be automatically generated for this admin account.
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a href="@Url.Action("StaffList", "Staff")" class="btn btn-outline-secondary px-4 fw-semibold">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                    <button type="reset" class="btn btn-outline-dark px-4 fw-semibold">
                        <i class="bi bi-arrow-clockwise"></i> Reset
                    </button>
                    <button type="submit" class="btn btn-primary px-4 fw-semibold" onclick="return confirm('Staff added successfully!');">
                        <i class="bi bi-check2-circle"></i> Add
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(function () {
            // Automatically copy email to username
            $('#email').on('input', function () {
                $('#username').val($(this).val());
            });
        });
    </script>
}
