@model List<PureFitness.Models.Equipment>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle" id="equipmentTable">
        <thead class="table-light">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Category</th>
                <th scope="col">Program</th>
                <th scope="col">Quantity</th>
                <th scope="col">Capacity</th>
                <th scope="col" class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var equipment in Model)
                {
                    <tr>
                        <td>@equipment.EquipmentName</td>
                        <td data-category="@equipment.EquipmentCategory">@equipment.EquipmentCategory</td>
                        <td>@equipment.Program</td>
                        <td>@equipment.Quantity</td>
                        <td>
                            @if (equipment.Capacity > 0)
                            {
                                @($"{equipment.Capacity} per member")
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </td>
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                <!-- Edit -->
                                <button class="btn btn-sm btn-outline-primary edit-equipment"
                                        data-id="@equipment.EquipmentId"
                                        title="Edit Equipment">
                                    <i class="bi bi-pencil-square"></i>
                                </button>

                                <!-- Delete -->
                                <button class="btn btn-sm btn-outline-danger delete-equipment"
                                        data-id="@equipment.EquipmentId"
                                        title="Delete Equipment">
                                    <i class="bi bi-trash"></i>
                                </button>

                                <!-- Items -->
                                <button class="btn btn-sm btn-outline-dark view-items-btn"
                                        data-id="@equipment.EquipmentId"
                                        data-name="@equipment.EquipmentName"
                                        title="View Equipment Items">
                                    <i class="bi bi-box-seam"></i> Items
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center py-4 text-muted">
                        <i class="bi bi-exclamation-circle me-2"></i>No equipment found.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
