<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PureFitness</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    @RenderSection("Styles", required: false)

    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .wrapper {
            display: flex;
            flex-direction: column;
            height: 100vh;
        }

        .top-bar {
            background-color: #334659;
            padding: 10px 25px;
            display: flex;
            color: white;
            justify-content: space-between;
            align-items: center;
            height: 120px;
        }

        .logo-img {
            width: 90px;
            height: 90px;
            border-radius: 50%;
        }

        .main {
            display: flex;
            flex-grow: 1;
        }

        .sidebar {
            background-color: #334659;
            width: 220px;
            padding: 20px 10px;
        }

            .sidebar a {
                display: flex;
                align-items: center;
                padding: 8px 10px;
                text-decoration: none;
                color: white;
                font-weight: 500;
                margin-bottom: 10px;
                border-radius: 5px;
                transition: background-color 0.2s ease-in-out;
            }

                .sidebar a:hover {
                    background-color: #cfcfcf;
                    color: #334659;
                }

            .sidebar i {
                margin-right: 10px;
                font-size: 1.2rem;
            }

        .content-area {
            flex-grow: 1;
            padding: 30px;
            background-color: white;
        }

        .logout-link {
            font-weight: bold;
            color: white;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <!-- Top bar -->
        <div class="top-bar">
            <div class="d-flex align-items-center">
                <img src="~/images/logo.png" class="logo-img" alt="Logo" />
                <span class="ms-2 fs-2">Pure<span class="fw-bold text-white">Fitness</span></span>
            </div>
            <form asp-controller="Login" asp-action="Logout" method="post" style="display:inline;">
                <button type="submit" class="logout-link" style="background:none; border:none; padding:0; display:flex; align-items:center; text-decoration:none;">
                    <i class="bi bi-box-arrow-right fs-2 me-2"></i>
                    <span style="font-weight:500; color: white; font-size:24px;">Logout</span>
                </button>
            </form>
        </div>

        <!-- Sidebar + Content -->
        <div class="main">
            <div class="sidebar">
                @{
                    var role = Context.Session.GetString("Role");
                }
                @if (role == "Admin")
                {
                    <a href="/Profile/AccountProfile"><i class="bi bi-person-circle"></i> Profile</a>
                    <a href="/Dashboard/Index"><i class="bi bi-grid-fill"></i> Dashboard</a>
                    <a href="/Membership/MemberList"><i class="bi bi-people-fill"></i> Membership Management</a>
                    <a href="/Staff/StaffList"><i class="bi bi-person-badge-fill"></i> Staff Management</a>
                    <a href="/Admin/AdminList"><i class="bi bi-person-gear"></i> Admin Management</a>
                    <a href="/Payment/PaymentList"><i class="bi bi-cash-stack"></i> Payment Management</a>
                    <a href="/Equipment/EquipmentList"><i class="bi bi-bicycle"></i> Equipment Management</a>
                    <a href="/Inventory/InventoryList"><i class="bi bi-box-seam"></i> Inventory Management</a>
                    <a href="/Attendance/AttendanceList"><i class="bi bi-calendar-check"></i> Attendance & Activity Tracking</a>
                    <a href="/WorkoutAndDietPlan/ExerciseAndDietPlanList"><i class="bi bi-heart-pulse"></i> Workout & Diet Plans</a>
                }
                else if (role == "Staff")
                {
                    <a href="/Profile/AccountProfile"><i class="bi bi-person-circle"></i> Profile</a>
                    <a href="/Dashboard/Index"><i class="bi bi-grid-fill"></i> Dashboard</a>
                    <a href="/Membership/MemberList"><i class="bi bi-people-fill"></i> Membership Management</a>
                    <a href="/Payment/PaymentList"><i class="bi bi-cash-stack"></i> Payment Management</a>
                    <a href="/Equipment/EquipmentList"><i class="bi bi-bicycle"></i> Equipment Management</a>
                    <a href="/Inventory/InventoryList"><i class="bi bi-box-seam"></i> Inventory Management</a>
                    <a href="/Attendance/AttendanceList"><i class="bi bi-calendar-check"></i> Attendance & Activity Tracking</a>
                    <a href="/WorkoutAndDietPlan/ExerciseAndDietPlanList"><i class="bi bi-heart-pulse"></i> Workout & Diet Plans</a>
                }
                else if (role == "Member")
                {
                    <a href="/Profile/AccountProfile"><i class="bi bi-person-circle"></i> Profile</a>
                    <a href="/Dashboard/Index"><i class="bi bi-grid-fill"></i> Dashboard</a>
                    <a href="/Attendance/AttendanceList"><i class="bi bi-calendar-check"></i> Attendance</a>
                    <a href="/WorkoutAndDietPlan/ExerciseAndDietPlanList"><i class="bi bi-heart-pulse"></i> Workout & Diet Plan</a>
                }
                else
                {
                    <p>Unauthorized</p>
                }
            </div>

            <div class="content-area">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
