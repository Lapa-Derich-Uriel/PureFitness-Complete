@model PureFitness.ViewModels.ForgotPasswordViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Forgot Password</title>
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: Arial, sans-serif;
            color: black;
        }

            body::before {
                content: "";
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: url('/images/background2.png') center no-repeat;
                background-size: cover;
                filter: blur(8px);
                z-index: -2;
            }

            body::after {
                content: "";
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.5);
                z-index: -1;
            }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            background: rgba(217, 217, 217, 0.5);
            color: #000;
        }

        .header-left {
            display: flex;
            align-items: center;
        }

            .header-left img {
                width: 50px;
                height: 50px;
                object-fit: cover;
                border-radius: 50%;
                margin-right: 10px;
                border: 2px solid #000;
                background-color: #fff;
            }

            .header-left h2 {
                margin: 0;
                font-weight: bold;
            }

        .header-right h4 {
            margin: 0;
            font-weight: bold;
        }

        main {
            display: flex;
            justify-content: center;
            align-items: center;
            height: calc(100vh - 60px);
        }

        .forgot-container {
            max-width: 400px;
            width: 100%;
            background-color: rgba(255, 255, 255, 0.1);
            padding: 30px;
            border-radius: 10px;
            backdrop-filter: blur(5px);
            color: white;
        }

            .forgot-container h3 {
                font-size: 1.5rem;
                font-weight: bold;
                margin-bottom: 1.5rem;
                color: white;
                text-align: center;
            }

        .form-group {
            margin-bottom: 1.2rem;
        }

        input[type="email"],
        input[type="password"],
        input[type="text"] {
            width: 100%;
            padding: 0.75rem;
            background: rgba(255, 255, 255, 0.7);
            border: none;
            border-radius: 5px;
            color: #333;
            font-size: 1rem;
        }

        .btn {
            width: 100%;
            padding: 0.75rem;
            border: none;
            border-radius: 5px;
            background: #fff;
            color: #000;
            font-weight: bold;
            cursor: pointer;
        }

        .code-group {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .send-code-btn {
            padding: 0.75rem;
            background: #fff;
            color: #000;
            border: none;
            border-radius: 5px;
            font-weight: bold;
            cursor: pointer;
            flex-shrink: 0;
            width: 40%;
        }

        .error {
            color: #ff6666;
            margin-top: 10px;
            text-align: center;
        }

        .back-link {
            display: block;
            text-align: center;
            margin-top: 1rem;
        }

            .back-link a {
                color: #fff;
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <header>
        <div class="header-left">
            <img src="/images/logo.png" alt="PureFit Logo" />
            <h2>PureFitness</h2>
        </div>
        <div class="header-right">
            <h4>Your fitness, our focus.</h4>
        </div>
    </header>

    <main>
        <div class="forgot-container">
            <h3>Forgot Password</h3>

            @if (TempData["ResetSuccess"] != null)
            {
                <div class="alert alert-success text-center">
                    @TempData["ResetSuccess"]
                </div>
            }

            <form asp-controller="Login" asp-action="ForgotPassword" method="post" id="forgotForm">
                <div class="form-group">
                    <input type="email" id="Email" name="Email" placeholder="Enter your email address" required />
                </div>

                <div class="form-group">
                    <input type="password" name="NewPassword" placeholder="New Password" required />
                </div>

                <div class="form-group">
                    <input type="password" name="ConfirmPassword" placeholder="Confirm Password" required />
                </div>

                <button type="submit" class="btn">Reset Password</button>
            </form>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <p class="error">@Model.ErrorMessage</p>
            }

            <div class="back-link">
                <a asp-action="LoginView" asp-controller="Login">Back to Login</a>
            </div>
        </div>
    </main>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $("#sendCodeBtn").on("click", function () {
            const email = $("#Email").val().trim();
            if (!email) {
                alert("Please enter your email address first.");
                return;
            }

            // 🔹 Send AJAX request to send the code
            $.ajax({
                url: '/Login/SendResetCode',
                type: 'POST',
                data: { email: email },
                success: function (response) {
                    alert(response.message || "Verification code sent to your email!");
                },
                error: function () {
                    alert("An error occurred while sending the code. Please try again.");
                }
            });
        });
    </script>
</body>
</html>
