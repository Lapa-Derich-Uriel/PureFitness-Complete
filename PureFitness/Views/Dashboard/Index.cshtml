@model PureFitness.ViewModels.DashboardViewModel

@{
    var role = Context.Session.GetString("Role");
    var username = Context.Session.GetString("Username");
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="dashboard-section">
    <h2 class="fw-bold mb-4">Welcome, @username!</h2>

    @if (role == "Admin")
    {
        <!-- ========================== ADMIN DASHBOARD ========================== -->
        <div class="row g-4 mb-4">
            <div class="col-md-2">
                <div class="summary-card bg-primary text-white shadow-sm text-center">
                    <div class="card-body">
                        <h5>Total Active Members</h5>
                        <h3>@ViewBag.TotalMembers</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="summary-card bg-success text-white shadow-sm text-center">
                    <div class="card-body">
                        <h5>New Memberships (This Month)</h5>
                        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
                        <script>
                            const ctx = document.getElementById('myBarChart').getContext('2d')
                            new Chart(ctx,{
                                type: 'bar',
                                data:{
                                    labels: ['January','February','March', 'April','May','June','July','August','September','October','November','December'],
                                    datasets: [{
                                        label: 'Memberships',
                                        data:['10','12','15','24','13','20','26','30','21','19','9','24'],
                                        backgroundcolor:'rgba(54,162,235,0.6)'
                                    }]
                                },
                                options:{
                                    responsive: true,
                                    scales:{
                                        y:{
                                            beginatzero: true
                                        }
                                    }
                                }
                            });
                        </script>
                        <h3>@ViewBag.NewMembersThisMonth</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="summary-card bg-info text-white shadow-sm text-center">
                    <div class="card-body">
                        <h5>Active Equipment</h5>
                        <h3>@ViewBag.ActiveEquipmentItems</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="summary-card bg-warning text-dark shadow-sm text-center">
                    <div class="card-body">
                        <h5>Under Maintenance</h5>
                        <h3>@ViewBag.EquipmentsUnderMaintenance</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="summary-card bg-danger text-white shadow-sm text-center">
                    <div class="card-body">
                        <h5>Total Staff</h5>
                        <h3>@ViewBag.TotalStaff</h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- Low Stock Inventory Table -->
        <div class="section-box">
            <h5 class="mb-3">📦 Low Stock Inventory</h5>
            @if (ViewBag.LowStockItems != null && ((List<PureFitness.Models.Inventory>)ViewBag.LowStockItems).Any())
            {
                <table class="table table-sm table-bordered align-middle bg-white">
                    <thead class="table-light">
                        <tr>
                            <th>Product Name</th>
                            <th>Quantity</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in (List<PureFitness.Models.Inventory>)ViewBag.LowStockItems)
                        {
                            <tr>
                                <td>@item.Product!.ProductName</td>
                                <td>@item.ProductQuantity</td>
                                <td><span class="badge bg-danger">Low Stock</span></td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted mb-0">All inventory items are sufficiently stocked.</p>
            }
        </div>
    }
    else if (role == "Staff")
    {
        <!-- ========================== STAFF DASHBOARD ========================== -->
        <div class="section-box">
            <h5>👋 Welcome, @Model.Name!</h5>
            <p class="text-muted">Your current assigned task:</p>

            @if (!string.IsNullOrEmpty(Model.AssignedTask))
            {
                <div class="alert alert-info">
                    <i class="bi bi-clipboard-check"></i> @Model.AssignedTask
                </div>
            }
            else
            {
                <div class="alert alert-secondary">
                    <i class="bi bi-clipboard-x"></i> No assigned tasks at the moment.
                </div>
            }

            @if (Model.EquipmentSchedules.Any())
            {
                <h6 class="mt-4">🛠 Assigned Equipment Schedules</h6>
                <ul class="list-group">
                    @foreach (var sched in Model.EquipmentSchedules)
                    {
                        <li class="list-group-item">
                            Equipment: <strong>@sched.Equipment?.EquipmentName</strong>
                            <br />
                            Schedule: @sched.MaintenanceDate - @sched.NextMaintenanceDate?.ToString("MMMM dd, yyyy")
                        </li>
                    }
                </ul>
            }
        </div>
    }
    else if (role == "Member" && Model.member != null)
    {
        <!-- ========================== MEMBER DASHBOARD ========================== -->
        <div class="section-box">
            <h5>Your Workout Goal</h5>
            <p class="text-muted">@Model.member.FitnessGoal</p>
        </div>

        <div class="section-box">
            <h5>Recent Activity & Notifications</h5>
            <ul>
                <li>Welcome back, @Model.member.Fname!</li>
                <li>Your membership type is <strong>@Model.member.MembershipType</strong> and valid until <strong>@Model.member.DueDate?.ToString("MMMM dd, yyyy")</strong>.</li>
            </ul>
        </div>
    }
    else
    {
        <div class="alert alert-danger">Unauthorized or session expired.</div>
    }
</div>

@section Scripts {
    <style>
        .dashboard-section {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .section-box {
            background-color: #D9D9D9;
            padding: 15px 20px;
            border-radius: 8px;
            font-weight: 600;
        }

        .summary-card {
            border-radius: 12px;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .summary-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 12px rgba(0,0,0,0.15);
            }

            .summary-card h5 {
                font-size: 1rem;
                font-weight: 600;
            }

            .summary-card h3 {
                font-size: 2rem;
                margin: 0;
                font-weight: bold;
            }
    </style>
}
